# .editorconfig

# Top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.py]
max_line_length = 120
indent_size = 4
quote_type = single

[*.pyi]
max_line_length = 120
indent_size = 4
quote_type = single

[*.js]
max_line_length = 120
indent_size = 2
indent_style = space

[*.sh]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
